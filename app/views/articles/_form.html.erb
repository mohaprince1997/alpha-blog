<%= render 'shared/errors',obj: @article%>

<div class="container">
  <%= form_for @article do |f| %>
    <div class="form-group row">
      <div class="col-sm-2">
        <%= f.label :title,class: 'col-form-label'%>
      </div> 
      <div class="col-sm-10">
        <%= f.text_field :title, class: 'form-control',placeholder: 'Title of the article'%>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-sm-2">
        <%=f.label :description,class: 'col-form-label' %>
      </div>
      <div class="col-sm-10">
        <%=f.text_area :description, class: 'form-control',rows: 10,placeholder: 'Body of the article'%>
      </div>
    </div>
    <div class="form-group row">
      <div class="offset-sm-2 col-sm-10">
        <%=f.submit class: 'btn btn-primary btn-lg'%>
      </div>
    </div>
  <%end%>
    <div class="row">
      <div class="col-md-4 offset-md-4">
        [<%= link_to 'Cancel and return to the list of articles',articles_path%>]
      </div>
    </div>
</div>