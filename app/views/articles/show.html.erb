<p class= "text-center">Created By:</p>
<div class="card mb-3 mx-auto" style="max-width: 540px;">
  <div class="row no-gutters">
    <div class="col-md-4">
      <%=link_to(gravatar_for(@article.user,size:30,classes: "card-img-top"),user_path(@article.user))%>
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title text-center"><%=link_to(@article.user.username,user_path(@article.user))%></h5>
        <p class="card-text text-center"><%=pluralize(@article.user.articles.count,"article")%></p>
      </div>
    </div>
  </div>
</div>
<div class="card bg-info text-white mb-3">
  <div class="card-header">
    <h3 class="text-center"><%=@article.title%></h3>
  </div>
  <div class="card-body">
    <%=simple_format(@article.description,class: "card-text")%>
    <div class="articles-actions">
      <%if logged_in? && (current_user == @article.user || current_user.admin?)  %>
        <%=link_to "Edit",edit_article_path(@article),class: "btn btn-outline-dark"%>
        <%=link_to "Delete",article_path(@article),method: :delete,data: {confirm: "Are you sure?"} ,class: "btn btn-outline-danger"%>
      <%end%>
      <%=link_to "View all articles",articles_path,class: "btn btn-outline-warning"%>
    </div>
  </div> 
</div>